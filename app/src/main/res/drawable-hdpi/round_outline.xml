<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- background -->
    <solid
        android:color="@color/color_button" />

    <!-- color y ancho del borde -->
    <stroke
        android:color="#000000"
        android:width="8dp"/>

    <!-- add some padding for text inside -->
    <padding
        android:bottom="15dp"
        android:left="15dp"
        android:right="15dp"
        android:top="15dp" />

    <!-- radio del borde, note that radius can be different for each corner -->
    <corners
        android:radius="100dp"/>
</shape>