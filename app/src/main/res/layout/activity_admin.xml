<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin">

    <LinearLayout
        android:id="@+id/btn_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_outline"
        android:layout_margin="5dp"
        android:padding="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_admin"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ADMINISTRACIÓN DE EMPRESAS"
            android:textColor="@color/white"
            android:textSize="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_com"
        android:layout_below="@+id/btn_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_outline"
        android:layout_margin="5dp"
        android:padding="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_com"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="INGENIERÍA COMERCIAL"
            android:textColor="@color/white"
            android:textSize="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_fin"
        android:layout_below="@+id/btn_com"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_outline"
        android:layout_margin="5dp"
        android:padding="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_fin"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="INGENIERÍA FINANCIERA"
            android:textColor="@color/white"
            android:textSize="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_eco"
        android:layout_below="@+id/btn_fin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_outline"
        android:layout_margin="5dp"
        android:padding="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_eco"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="INGENIERÍA ECONÓMICA"
            android:textColor="@color/white"
            android:textSize="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_audi"
        android:layout_below="@+id/btn_eco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_outline"
        android:layout_margin="5dp"
        android:padding="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_audi"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="AUDITORIA/CONTADURÍA"
            android:textColor="@color/white"
            android:textSize="16dp"/>
    </LinearLayout>

</RelativeLayout>